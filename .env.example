LARAVEL_API_URL=https://devkomoditas.surakarta.go.id/api
LARAVEL_API_KEY=wa_gate_51NfT2eSdKjXy7xJ9aBc3dEfGh4IjKlMnOpQrStUvWxYz1234567890AbCd

# Development
