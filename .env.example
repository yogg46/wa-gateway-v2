# ============================================
# WA-GATE V2 - ENVIRONMENT CONFIGURATION
# ============================================

# Application
NODE_ENV=development
APP_NAME=WA-Gate-v2
APP_VERSION=2.0.0
PORT=3000
HOST=0.0.0.0

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=wa_gate_v2
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_DIALECT=mysql
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_LOGGING=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-key-min-32-chars-change-this
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-session-secret-min-32-chars-long-change-this
SESSION_MAX_AGE=86400000

# API Keys (Generate your own secure keys)
API_KEY_ADMIN=wa_gate_admin_key_change_this_in_production_min_32_chars
API_KEY_USER=wa_gate_user_key_change_this_in_production_min_32_chars

# WhatsApp Configuration
WA_SESSION_PATH=./auth
WA_AUTO_RECONNECT=true
WA_MAX_RECONNECT_ATTEMPTS=5
WA_RECONNECT_INTERVAL=5000
WA_QR_TIMEOUT=60000
WA_PRESENCE_UPDATE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_MESSAGE_MAX=50

# CORS
CORS_ORIGIN=http://localhost:3000,http://192.168.1.100:3000
CORS_CREDENTIALS=true

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Webhook Configuration
WEBHOOK_URL=https://your-laravel-app.com/api/wa-webhook
WEBHOOK_SECRET=your-webhook-hmac-secret-key-change-this
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# File Upload
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30d
LOG_DIR=./logs

# Security
HELMET_ENABLED=true
XSS_PROTECTION=true
IP_WHITELIST=
IP_BLACKLIST=

# Dashboard
DASHBOARD_ENABLED=true
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=Th3Glo0myGloryEnds!

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

